@model EditEnhancementViewModel

<div class="modal-header">
    <h5 class="modal-title">
        <i class="bi bi-pencil-square me-2"></i>
        @(string.IsNullOrEmpty(Model.Id) ? "Add Enhancement" : "Edit Enhancement")
    </h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<form id="editEnhancementForm" asp-action="Save" asp-controller="Enhancements">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    
    <div class="modal-body">
        <div class="row g-3">
            <!-- Core Fields -->
            <div class="col-md-4">
                <label asp-for="WorkId" class="form-label">Work ID <span class="text-danger">*</span></label>
                <input asp-for="WorkId" class="form-control" />
                <span asp-validation-for="WorkId" class="text-danger small"></span>
            </div>
            
            <div class="col-md-4">
                <label asp-for="ServiceAreaId" class="form-label">Service Area</label>
                <select asp-for="ServiceAreaId" asp-items="@(new SelectList(Model.AvailableServiceAreas, "Id", "Name"))" 
                        class="form-select"></select>
            </div>
            
            <div class="col-md-4">
                <label asp-for="Status" class="form-label">Status</label>
                <select asp-for="Status" class="form-select">
                    <option value="New">New</option>
                    <option value="In Progress">In Progress</option>
                    <option value="On Hold">On Hold</option>
                    <option value="Completed">Completed</option>
                    <option value="Cancelled">Cancelled</option>
                </select>
            </div>
            
            <div class="col-12">
                <label asp-for="Description" class="form-label">Description</label>
                <input asp-for="Description" class="form-control" />
            </div>
            
            <div class="col-12">
                <label asp-for="Notes" class="form-label">Notes</label>
                <textarea asp-for="Notes" class="form-control" rows="2"></textarea>
            </div>
            
            <!-- Estimation Section -->
            <div class="col-12">
                <hr />
                <h6 class="text-muted">Estimation</h6>
            </div>
            
            <div class="col-md-3">
                <label asp-for="EstimatedHours" class="form-label">Est. Hours</label>
                <input asp-for="EstimatedHours" type="number" step="0.5" class="form-control" />
            </div>
            
            <div class="col-md-3">
                <label asp-for="EstimatedStartDate" class="form-label">Est. Start</label>
                <input asp-for="EstimatedStartDate" type="date" class="form-control" />
            </div>
            
            <div class="col-md-3">
                <label asp-for="EstimatedEndDate" class="form-label">Est. End</label>
                <input asp-for="EstimatedEndDate" type="date" class="form-control" />
            </div>
            
            <div class="col-md-3">
                <label asp-for="ServiceLine" class="form-label">Service Line</label>
                <input asp-for="ServiceLine" class="form-control" />
            </div>
            
            <div class="col-12">
                <label asp-for="EstimationNotes" class="form-label">Estimation Notes</label>
                <textarea asp-for="EstimationNotes" class="form-control" rows="2"></textarea>
            </div>
            
            <!-- Actual/Returned Section -->
            <div class="col-12">
                <hr />
                <h6 class="text-muted">Actual</h6>
            </div>
            
            <div class="col-md-3">
                <label asp-for="ReturnedHours" class="form-label">Returned Hours</label>
                <input asp-for="ReturnedHours" type="number" step="0.5" class="form-control" />
            </div>
            
            <div class="col-md-3">
                <label asp-for="StartDate" class="form-label">Start Date</label>
                <input asp-for="StartDate" type="date" class="form-control" />
            </div>
            
            <div class="col-md-3">
                <label asp-for="EndDate" class="form-label">End Date</label>
                <input asp-for="EndDate" type="date" class="form-control" />
            </div>
            
            <div class="col-md-3">
                <label asp-for="InfStatus" class="form-label">INF Status</label>
                <input asp-for="InfStatus" class="form-control" />
            </div>
            
            <!-- Weekly Time -->
            <div class="col-12">
                <hr />
                <h6 class="text-muted">Weekly Time Allocation</h6>
            </div>
            
            <div class="col">
                <label class="form-label small">W1</label>
                <input asp-for="TimeW1" type="number" step="0.5" class="form-control form-control-sm" />
            </div>
            <div class="col">
                <label class="form-label small">W2</label>
                <input asp-for="TimeW2" type="number" step="0.5" class="form-control form-control-sm" />
            </div>
            <div class="col">
                <label class="form-label small">W3</label>
                <input asp-for="TimeW3" type="number" step="0.5" class="form-control form-control-sm" />
            </div>
            <div class="col">
                <label class="form-label small">W4</label>
                <input asp-for="TimeW4" type="number" step="0.5" class="form-control form-control-sm" />
            </div>
            <div class="col">
                <label class="form-label small">W5</label>
                <input asp-for="TimeW5" type="number" step="0.5" class="form-control form-control-sm" />
            </div>
            <div class="col">
                <label class="form-label small">W6</label>
                <input asp-for="TimeW6" type="number" step="0.5" class="form-control form-control-sm" />
            </div>
            <div class="col">
                <label class="form-label small">W7</label>
                <input asp-for="TimeW7" type="number" step="0.5" class="form-control form-control-sm" />
            </div>
            <div class="col">
                <label class="form-label small">W8</label>
                <input asp-for="TimeW8" type="number" step="0.5" class="form-control form-control-sm" />
            </div>
            <div class="col">
                <label class="form-label small">W9</label>
                <input asp-for="TimeW9" type="number" step="0.5" class="form-control form-control-sm" />
            </div>
            
            <!-- Contacts & Resources -->
            <div class="col-md-6">
                <label asp-for="SelectedContactIds" class="form-label">Contacts (Client/Sponsor)</label>
                <select asp-for="SelectedContactIds" asp-items="@(new SelectList(Model.AvailableContacts, "Id", "Name"))" 
                        class="form-select" multiple size="3"></select>
            </div>
            
            <div class="col-md-6">
                <label asp-for="SelectedResourceIds" class="form-label">Resources (Internal)</label>
                <select asp-for="SelectedResourceIds" asp-items="@(new SelectList(Model.AvailableResources, "Id", "Name"))" 
                        class="form-select" multiple size="3"></select>
            </div>
        </div>
    </div>
    
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-check-lg me-1"></i> Save
        </button>
    </div>
</form>
