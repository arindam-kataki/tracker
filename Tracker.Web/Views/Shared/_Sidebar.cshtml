@using System.Security.Claims
@model Tracker.Web.ViewModels.SidebarViewModel

<div class="sidebar bg-dark text-white d-flex flex-column" style="width: 260px; min-height: 100vh;">
    <!-- Brand -->
    <div class="p-3 border-bottom border-secondary">
        <h4 class="mb-0">
            <i class="bi bi-kanban me-2"></i>TRACKER
        </h4>
    </div>
    
    <!-- Navigation (flex-grow to push user section to bottom) -->
    <nav class="mt-2 flex-grow-1">
        <!-- Enhancements Section -->
        <div class="sidebar-section">
            <div class="sidebar-header px-3 py-2 text-uppercase small text-secondary">
                <i class="bi bi-list-check me-2"></i>Enhancements
            </div>
            
            @foreach (var sa in Model.ServiceAreas)
            {
                var isActive = Model.CurrentServiceAreaId == sa.Id;
                <a href="@Url.Action("Index", "Enhancements", new { serviceAreaId = sa.Id })" 
                   class="sidebar-link d-block px-4 py-2 text-decoration-none @(isActive ? "active" : "")">
                    <i class="bi bi-folder me-2"></i>@sa.Name
                </a>
            }
            
            <a href="@Url.Action("Index", "Upload")" 
               class="sidebar-link d-block px-4 py-2 text-decoration-none @(Model.CurrentPage == "upload" ? "active" : "")">
                <i class="bi bi-upload me-2"></i>Upload
            </a>
        </div>
        
        <!-- Reports -->
        <div class="sidebar-section mt-3">
            <a href="@Url.Action("Index", "Reports")" 
               class="sidebar-link d-block px-3 py-2 text-decoration-none @(Model.CurrentPage == "reports" ? "active" : "")">
                <i class="bi bi-bar-chart me-2"></i>Reports
            </a>
        </div>
        
        <!-- Admin Section (SuperAdmin only) -->
        @if (Model.IsSuperAdmin)
        {
            <div class="sidebar-section mt-3 border-top border-secondary pt-3">
                <div class="sidebar-header px-3 py-2 text-uppercase small text-secondary">
                    <i class="bi bi-gear me-2"></i>Administration
                </div>
                
                <a href="@Url.Action("Users", "Admin")" 
                   class="sidebar-link d-block px-4 py-2 text-decoration-none @(Model.CurrentPage == "users" ? "active" : "")">
                    <i class="bi bi-person-gear me-2"></i>Users
                </a>
                
                <a href="@Url.Action("ServiceAreas", "Admin")" 
                   class="sidebar-link d-block px-4 py-2 text-decoration-none @(Model.CurrentPage == "serviceareas" ? "active" : "")">
                    <i class="bi bi-diagram-3 me-2"></i>Service Areas
                </a>

                <a href="@Url.Action("Index", "Resources")" 
                    class="sidebar-link d-block px-3 py-2 text-decoration-none @(Model.CurrentPage == "resources" ? "active" : "")">
                    <i class="bi bi-people me-2"></i>Resources
                </a>

            </div>
            
            <!-- Lookups Section (SuperAdmin only) -->
            <div class="sidebar-section mt-3 border-top border-secondary pt-3">
                <div class="sidebar-header px-3 py-2 text-uppercase small text-secondary">
                    <i class="bi bi-sliders me-2"></i>Lookups
                </div>
                
                <a href="@Url.Action("ResourceTypes", "Lookups")" 
                   class="sidebar-link d-block px-4 py-2 text-decoration-none @(Model.CurrentPage == "resourcetypes" ? "active" : "")">
                    <i class="bi bi-tag me-2"></i>Resource Types
                </a>
                
                <a href="@Url.Action("Skills", "Lookups")" 
                   class="sidebar-link d-block px-4 py-2 text-decoration-none @(Model.CurrentPage == "skills" ? "active" : "")">
                    <i class="bi bi-tools me-2"></i>Skills
                </a>
            </div>
        }
    </nav>
    
    <!-- User Section (pinned to bottom) -->
    <div class="user-section p-3 border-top border-secondary mt-auto">
        <div class="d-flex align-items-center">
            <div class="flex-shrink-0">
                <i class="bi bi-person-circle fs-4"></i>
            </div>
            <div class="flex-grow-1 ms-2 overflow-hidden">
                <div class="text-truncate small">@Model.UserEmail</div>
                <div class="text-secondary small">@Model.UserRole</div>
            </div>
            <div class="flex-shrink-0">
                <a href="@Url.Action("Logout", "Account")" class="text-white" title="Logout">
                    <i class="bi bi-box-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>
