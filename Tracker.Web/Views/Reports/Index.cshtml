@model ReportsIndexViewModel
@{
    ViewData["Title"] = "Reports";
}

@Html.AntiForgeryToken()

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-1">
            <i class="bi bi-bar-chart me-2"></i>Reports
        </h4>
        <small class="text-muted">Create and run named reports across your service areas</small>
    </div>
    <a href="@Url.Action("Create")" class="btn btn-primary">
        <i class="bi bi-plus-lg me-1"></i> New Report
    </a>
</div>

@if (!Model.Reports.Any())
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="bi bi-file-earmark-bar-graph display-1 text-muted mb-3"></i>
            <h5>No Reports Yet</h5>
            <p class="text-muted mb-4">Create your first report to start analyzing enhancements across service areas.</p>
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="bi bi-plus-lg me-1"></i> Create Report
            </a>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Report Name</th>
                        <th>Service Areas</th>
                        <th class="text-center">Columns</th>
                        <th>Created</th>
                        <th>Modified</th>
                        <th class="text-end" style="width: 200px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var report in Model.Reports)
                    {
                        <tr>
                            <td>
                                <div class="fw-medium">@report.Name</div>
                                @if (!string.IsNullOrEmpty(report.Description))
                                {
                                    <small class="text-muted">@report.Description</small>
                                }
                            </td>
                            <td>
                                @if (report.ServiceAreaNames.Any())
                                {
                                    @foreach (var name in report.ServiceAreaNames.Take(3))
                                    {
                                        <span class="badge bg-secondary me-1">@name</span>
                                    }
                                    @if (report.ServiceAreaNames.Count > 3)
                                    {
                                        <span class="badge bg-light text-dark">+@(report.ServiceAreaNames.Count - 3) more</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">None</span>
                                }
                            </td>
                            <td class="text-center">
                                <span class="badge bg-info">@report.ColumnCount</span>
                            </td>
                            <td>
                                <small>@report.CreatedAt.ToString("MMM dd, yyyy")</small>
                            </td>
                            <td>
                                @if (report.ModifiedAt.HasValue)
                                {
                                    <small>@report.ModifiedAt.Value.ToString("MMM dd, yyyy")</small>
                                }
                                else
                                {
                                    <small class="text-muted">â€”</small>
                                }
                            </td>
                            <td class="text-end">
                                <a href="@Url.Action("Run", new { id = report.Id })" class="btn btn-sm btn-success" title="Run Report">
                                    <i class="bi bi-play-fill me-1"></i> Run
                                </a>
                                <a href="@Url.Action("Edit", new { id = report.Id })" class="btn btn-sm btn-outline-primary" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <button type="button" class="btn btn-sm btn-outline-danger delete-report-btn" 
                                        data-report-id="@report.Id" 
                                        data-report-name="@report.Name"
                                        title="Delete">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Report</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the report "<strong id="deleteReportName"></strong>"?</p>
                <p class="text-muted mb-0">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
(function() {
    let reportIdToDelete = null;
    const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
    
    // Delete button click
    document.querySelectorAll('.delete-report-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            reportIdToDelete = this.dataset.reportId;
            document.getElementById('deleteReportName').textContent = this.dataset.reportName;
            deleteModal.show();
        });
    });
    
    // Confirm delete
    document.getElementById('confirmDeleteBtn').addEventListener('click', async function() {
        if (!reportIdToDelete) return;
        
        const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
        
        try {
            const response = await fetch('@Url.Action("Delete")?id=' + reportIdToDelete, {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': token
                }
            });
            
            const result = await response.json();
            
            if (result.success) {
                window.location.reload();
            } else {
                alert(result.error || 'Failed to delete report');
            }
        } catch (error) {
            console.error('Error:', error);
            alert('An error occurred while deleting the report');
        }
        
        deleteModal.hide();
    });
})();
</script>
}
