@model EditResourceViewModel
@using Tracker.Web.Entities

<div class="modal-header">
    <h5 class="modal-title">
        <i class="bi bi-person me-2"></i>
        @(string.IsNullOrEmpty(Model.Id) ? "Add Resource" : "Edit Resource")
    </h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<form id="editResourceForm" asp-action="Save" asp-controller="Resources">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    
    <div class="modal-body">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name <span class="text-danger">*</span></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger small"></span>
        </div>
        
        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" type="email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger small"></span>
        </div>
        
        <div class="mb-3">
            <label asp-for="Type" class="form-label">Resource Type</label>
            <select asp-for="Type" class="form-select">
                <option value="@ResourceType.Client">Client (Sponsor)</option>
                <option value="@ResourceType.SPOC">Infy SPOC</option>
                <option value="@ResourceType.Internal">Infy Internal</option>
            </select>
            <small class="text-muted">
                <strong>Client:</strong> Client-side sponsors/stakeholders &bull;
                <strong>SPOC:</strong> Infy Single Point of Contact &bull;
                <strong>Internal:</strong> Infy team members
            </small>
        </div>
        
        @if (!string.IsNullOrEmpty(Model.Id))
        {
            <div class="mb-3">
                <div class="form-check">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label">Active</label>
                </div>
            </div>
        }
    </div>
    
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-check-lg me-1"></i> Save
        </button>
    </div>
</form>
