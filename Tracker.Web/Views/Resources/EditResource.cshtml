@model Tracker.Web.ViewModels.EditResourceViewModel

<div class="modal-header">
    <h5 class="modal-title">
        <i class="bi bi-person me-2"></i>
        @(string.IsNullOrEmpty(Model.Id) ? "Add Resource" : "Edit Resource")
    </h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<form id="editResourceForm">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    
    <div class="modal-body">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name <span class="text-danger">*</span></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger small"></span>
        </div>
        
        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" type="email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger small"></span>
        </div>
        
        <div class="mb-3">
            <label asp-for="ResourceTypeId" class="form-label">Resource Type <span class="text-danger">*</span></label>
            <select asp-for="ResourceTypeId" asp-items="Model.ResourceTypes" class="form-select">
                <option value="">-- Select Type --</option>
            </select>
            <span asp-validation-for="ResourceTypeId" class="text-danger small"></span>
        </div>
        
        <div class="mb-3">
            <label class="form-label">Skills</label>
            <select asp-for="SkillIds" class="form-select" multiple size="5">
                @foreach (var group in Model.AvailableSkills.GroupBy(s => s.Group))
                {
                    <optgroup label="@group.Key">
                        @foreach (var skill in group)
                        {
                            <option value="@skill.Value" selected="@skill.Selected">@skill.Text</option>
                        }
                    </optgroup>
                }
            </select>
            <small class="text-muted">Hold Ctrl/Cmd to select multiple skills</small>
        </div>
        
        <div class="mb-3">
            <div class="form-check">
                <input asp-for="IsActive" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label">Active</label>
            </div>
        </div>
    </div>
    
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-check-lg me-1"></i>Save
        </button>
    </div>
</form>
