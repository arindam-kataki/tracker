@model Tracker.Web.ViewModels.ResourceTypesViewModel
@{
    ViewData["Title"] = "Resource Types";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">
        <i class="bi bi-tag me-2"></i>Resource Types
    </h4>
    <button type="button" class="btn btn-primary" onclick="loadEditModal('')">
        <i class="bi bi-plus-lg me-1"></i>Add Resource Type
    </button>
</div>

<!-- Search -->
<div class="card mb-3">
    <div class="card-body py-2">
        <form method="get" class="row g-2 align-items-center">
            <div class="col-auto">
                <input type="text" name="search" class="form-control form-control-sm" 
                       placeholder="Search..." value="@Model.SearchTerm" />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-search"></i>
                </button>
                @if (!string.IsNullOrEmpty(Model.SearchTerm))
                {
                    <a href="@Url.Action("ResourceTypes")" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-x-lg"></i>
                    </a>
                }
            </div>
        </form>
    </div>
</div>

<!-- Table -->
<div class="card">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Enhancement Column</th>
                    <th style="width: 80px;">Multiple</th>
                    <th style="width: 80px;">Order</th>
                    <th style="width: 80px;">Status</th>
                    <th style="width: 100px;">Resources</th>
                    <th style="width: 100px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.ResourceTypes.Any())
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted py-4">
                            <i class="bi bi-inbox display-6 d-block mb-2"></i>
                            No resource types found.
                        </td>
                    </tr>
                }
                @foreach (var rt in Model.ResourceTypes)
                {
                    <tr>
                        <td>
                            <strong>@rt.Name</strong>
                        </td>
                        <td class="text-muted">@(rt.Description ?? "-")</td>
                        <td>
                            @{
                                var columnBadgeClass = rt.EnhancementColumnDisplay switch
                                {
                                    "Sponsors" => "bg-info",
                                    "SPOCs" => "bg-primary",
                                    "Resources" => "bg-success",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @columnBadgeClass">@rt.EnhancementColumnDisplay</span>
                        </td>
                        <td class="text-center">
                            @if (rt.AllowMultiple)
                            {
                                <i class="bi bi-check-circle-fill text-success" title="Multiple allowed"></i>
                            }
                            else
                            {
                                <i class="bi bi-1-circle-fill text-warning" title="Single only"></i>
                            }
                        </td>
                        <td>@rt.DisplayOrder</td>
                        <td>
                            @if (rt.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                        <td>
                            <span class="badge bg-info">@rt.ResourceCount</span>
                        </td>
                        <td>
                            <button type="button" class="btn btn-sm btn-outline-primary me-1" 
                                    onclick="loadEditModal('@rt.Id')" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </button>
                            @if (rt.ResourceCount == 0)
                            {
                                <button type="button" class="btn btn-sm btn-outline-danger delete-btn" 
                                        data-id="@rt.Id" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content" id="editModalContent">
            <!-- Loaded via AJAX -->
        </div>
    </div>
</div>

@section Scripts {
<script>
    var antiForgeryToken = document.querySelector('input[name="__RequestVerificationToken"]')?.value 
        || '@Html.AntiForgeryToken()'.match(/value="([^"]+)"/)?.[1];

    document.addEventListener('DOMContentLoaded', function() {
        document.querySelectorAll('.delete-btn').forEach(function(btn) {
            btn.addEventListener('click', function() {
                var id = this.getAttribute('data-id');
                if (confirm('Are you sure you want to delete this resource type?')) {
                    deleteResourceType(id);
                }
            });
        });
    });

    function loadEditModal(id) {
        var url = id 
            ? '@Url.Action("EditResourceType", "Lookups")?id=' + id
            : '@Url.Action("EditResourceType", "Lookups")';
        
        fetch(url)
            .then(function(r) { return r.text(); })
            .then(function(html) {
                document.getElementById('editModalContent').innerHTML = html;
                var modal = new bootstrap.Modal(document.getElementById('editModal'));
                modal.show();
                attachFormHandler();
            });
    }

    function attachFormHandler() {
        var form = document.getElementById('editResourceTypeForm');
        if (form) {
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                fetch('@Url.Action("SaveResourceType", "Lookups")', {
                    method: 'POST',
                    body: new FormData(form)
                })
                .then(function(r) { return r.json(); })
                .then(function(data) {
                    if (data.success) location.reload();
                    else alert('Error saving resource type');
                })
                .catch(function() { alert('Error saving resource type'); });
            });
        }
    }

    function deleteResourceType(id) {
        fetch('@Url.Action("DeleteResourceType", "Lookups")', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'RequestVerificationToken': antiForgeryToken
            },
            body: 'id=' + id
        })
        .then(function(r) { return r.json(); })
        .then(function(data) {
            if (data.success) location.reload();
            else alert('Cannot delete: Resource type is in use.');
        });
    }
</script>
}
