@{
    ViewData["Title"] = "No Permission";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card shadow-sm">
                <div class="card-body py-5">
                    <i class="bi bi-shield-lock display-1 text-warning mb-4"></i>
                    <h3 class="mb-3">No Timesheet Permission</h3>
                    <p class="text-muted mb-4">
                        @(ViewBag.Message ?? "You do not have permission to log timesheets. Please contact an administrator to request access.")
                    </p>
                    <a href="/" class="btn btn-primary">
                        <i class="bi bi-house me-1"></i> Go to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
