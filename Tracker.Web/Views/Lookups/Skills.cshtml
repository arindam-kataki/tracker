@model Tracker.Web.ViewModels.SkillsViewModel
@{
    ViewData["Title"] = "Skills";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">
        <i class="bi bi-tools me-2"></i>Skills
    </h4>
    <button type="button" class="btn btn-primary" onclick="loadEditModal('')">
        <i class="bi bi-plus-lg me-1"></i>Add Skill
    </button>
</div>

<!-- Search & Filter -->
<div class="card mb-3">
    <div class="card-body py-2">
        <form method="get" class="row g-2 align-items-center">
            <div class="col-auto">
                <input type="text" name="search" class="form-control form-control-sm" 
                       placeholder="Search..." value="@Model.SearchTerm" />
            </div>
            <div class="col-auto">
                <select name="serviceAreaId" class="form-select form-select-sm">
                    <option value="">All Service Areas</option>
                    @foreach (var sa in Model.ServiceAreas)
                    {
                        <option value="@sa.Value" selected="@(sa.Value == Model.ServiceAreaFilter)">@sa.Text</option>
                    }
                </select>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-search"></i> Filter
                </button>
                @if (!string.IsNullOrEmpty(Model.SearchTerm) || !string.IsNullOrEmpty(Model.ServiceAreaFilter))
                {
                    <a href="@Url.Action("Skills")" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-x-lg"></i> Clear
                    </a>
                }
            </div>
        </form>
    </div>
</div>

<!-- Table -->
<div class="card">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Service Area</th>
                    <th style="width: 80px;">Status</th>
                    <th style="width: 100px;">Resources</th>
                    <th style="width: 120px;">Enhancements</th>
                    <th style="width: 100px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Skills.Any())
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted py-4">
                            <i class="bi bi-inbox display-6 d-block mb-2"></i>
                            No skills found.
                        </td>
                    </tr>
                }
                @foreach (var skill in Model.Skills)
                {
                    <tr>
                        <td>
                            <strong>@skill.Name</strong>
                        </td>
                        <td class="text-muted">@(skill.Description ?? "-")</td>
                        <td>
                            <span class="badge bg-secondary">@skill.ServiceAreaName</span>
                        </td>
                        <td>
                            @if (skill.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                        <td>
                            <span class="badge bg-info">@skill.ResourceCount</span>
                        </td>
                        <td>
                            <span class="badge bg-primary">@skill.EnhancementCount</span>
                        </td>
                        <td>
                            <button type="button" class="btn btn-sm btn-outline-primary me-1" 
                                    onclick="loadEditModal('@skill.Id')" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </button>
                            @if (skill.ResourceCount == 0 && skill.EnhancementCount == 0)
                            {
                                <button type="button" class="btn btn-sm btn-outline-danger delete-btn" 
                                        data-id="@skill.Id" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content" id="editModalContent">
            <!-- Loaded via AJAX -->
        </div>
    </div>
</div>

@section Scripts {
<script>
    var antiForgeryToken = document.querySelector('input[name="__RequestVerificationToken"]')?.value 
        || '@Html.AntiForgeryToken()'.match(/value="([^"]+)"/)?.[1];

    document.addEventListener('DOMContentLoaded', function() {
        document.querySelectorAll('.delete-btn').forEach(function(btn) {
            btn.addEventListener('click', function() {
                var id = this.getAttribute('data-id');
                if (confirm('Are you sure you want to delete this skill?')) {
                    deleteSkill(id);
                }
            });
        });
    });

    function loadEditModal(id) {
        var url = id 
            ? '@Url.Action("EditSkill", "Lookups")?id=' + id
            : '@Url.Action("EditSkill", "Lookups")';
        
        fetch(url)
            .then(function(r) { return r.text(); })
            .then(function(html) {
                document.getElementById('editModalContent').innerHTML = html;
                var modal = new bootstrap.Modal(document.getElementById('editModal'));
                modal.show();
                attachFormHandler();
            });
    }

    function attachFormHandler() {
        var form = document.getElementById('editSkillForm');
        if (form) {
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                fetch('@Url.Action("SaveSkill", "Lookups")', {
                    method: 'POST',
                    body: new FormData(form)
                })
                .then(function(r) { return r.json(); })
                .then(function(data) {
                    if (data.success) location.reload();
                    else alert('Error saving skill');
                })
                .catch(function() { alert('Error saving skill'); });
            });
        }
    }

    function deleteSkill(id) {
        fetch('@Url.Action("DeleteSkill", "Lookups")', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'RequestVerificationToken': antiForgeryToken
            },
            body: 'id=' + id
        })
        .then(function(r) { return r.json(); })
        .then(function(data) {
            if (data.success) location.reload();
            else alert('Cannot delete: Skill is in use.');
        });
    }
</script>
}
