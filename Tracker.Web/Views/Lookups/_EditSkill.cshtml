@model Tracker.Web.ViewModels.EditSkillViewModel

<div class="modal-header">
    <h5 class="modal-title">
        <i class="bi bi-tools me-2"></i>
        @(string.IsNullOrEmpty(Model.Id) ? "Add Skill" : "Edit Skill")
    </h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<form id="editSkillForm">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    
    <div class="modal-body">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name <span class="text-danger">*</span></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger small"></span>
        </div>
        
        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger small"></span>
        </div>
        
        <div class="mb-3">
            <label asp-for="ServiceAreaId" class="form-label">Service Area <span class="text-danger">*</span></label>
            <select asp-for="ServiceAreaId" asp-items="Model.ServiceAreas" class="form-select">
                <option value="">-- Select Service Area --</option>
            </select>
            <span asp-validation-for="ServiceAreaId" class="text-danger small"></span>
        </div>
        
        <div class="mb-3">
            <div class="form-check">
                <input asp-for="IsActive" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label">Active</label>
            </div>
        </div>
    </div>
    
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-check-lg me-1"></i>Save
        </button>
    </div>
</form>
