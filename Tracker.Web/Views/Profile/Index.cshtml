@model Tracker.Web.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8">
            <!-- Profile Header -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="avatar-lg bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-4" style="width: 80px; height: 80px; font-size: 2rem;">
                            @Model.Name.Substring(0, 1).ToUpper()
                        </div>
                        <div>
                            <h3 class="mb-1">@Model.Name</h3>
                            <p class="text-muted mb-1">
                                <i class="bi bi-envelope me-1"></i>@(Model.Email ?? "No email")
                            </p>
                            @if (!string.IsNullOrEmpty(Model.Phone))
                            {
                                <p class="text-muted mb-0">
                                    <i class="bi bi-telephone me-1"></i>@Model.Phone
                                </p>
                            }
                        </div>
                        <div class="ms-auto">
                            @if (Model.IsAdmin)
                            {
                                <span class="badge bg-danger fs-6">
                                    <i class="bi bi-shield-check me-1"></i>Administrator
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary fs-6">
                                    @Model.OrganizationTypeDisplay
                                </span>
                            }
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Account Info -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-person-badge me-2"></i>Account Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted small">Organization Type</label>
                            <p class="mb-0 fw-medium">@Model.OrganizationTypeDisplay</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted small">Account Created</label>
                            <p class="mb-0 fw-medium">@Model.CreatedAt.ToString("MMMM dd, yyyy")</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted small">Last Login</label>
                            <p class="mb-0 fw-medium">
                                @if (Model.LastLoginAt.HasValue)
                                {
                                    @Model.LastLoginAt.Value.ToString("MMMM dd, yyyy hh:mm tt")
                                }
                                else
                                {
                                    <span class="text-muted">Never</span>
                                }
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted small">Status</label>
                            <p class="mb-0">
                                <span class="badge bg-success">Active</span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Service Areas -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-diagram-3 me-2"></i>Service Area Access
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.IsAdmin)
                    {
                        <div class="alert alert-info m-3 mb-0">
                            <i class="bi bi-info-circle me-2"></i>
                            As an administrator, you have full access to all service areas.
                        </div>
                    }
                    else if (!Model.ServiceAreas.Any())
                    {
                        <div class="text-center text-muted py-4">
                            <i class="bi bi-inbox display-6 d-block mb-2"></i>
                            No service areas assigned
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Service Area</th>
                                        <th>Permissions</th>
                                        <th>Joined</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var sa in Model.ServiceAreas)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <span class="badge bg-secondary me-2">@sa.ServiceAreaCode</span>
                                                    <strong>@sa.ServiceAreaName</strong>
                                                    @if (sa.IsPrimary)
                                                    {
                                                        <span class="badge bg-primary ms-2">Primary</span>
                                                    }
                                                </div>
                                            </td>
                                            <td>
                                                <small class="text-muted">@sa.PermissionsDisplay</small>
                                            </td>
                                            <td>
                                                <small class="text-muted">@sa.JoinedAt.ToString("MMM dd, yyyy")</small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Quick Actions -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-lightning me-2"></i>Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("ChangePassword", "Profile")" class="btn btn-outline-primary">
                            <i class="bi bi-key me-2"></i>Change Password
                        </a>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                            <i class="bi bi-house me-2"></i>Go to Dashboard
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- Permissions Legend -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>Permissions Guide
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row small mb-0">
                        <dt class="col-sm-5">View Enh</dt>
                        <dd class="col-sm-7 text-muted">View enhancements</dd>
                        
                        <dt class="col-sm-5">Edit Enh</dt>
                        <dd class="col-sm-7 text-muted">Edit enhancements</dd>
                        
                        <dt class="col-sm-5">Upload Enh</dt>
                        <dd class="col-sm-7 text-muted">Import enhancements</dd>
                        
                        <dt class="col-sm-5">Log Time</dt>
                        <dd class="col-sm-7 text-muted">Log own timesheet</dd>
                        
                        <dt class="col-sm-5">View Time</dt>
                        <dd class="col-sm-7 text-muted">View all timesheets</dd>
                        
                        <dt class="col-sm-5">Approve Time</dt>
                        <dd class="col-sm-7 text-muted">Approve timesheets</dd>
                        
                        <dt class="col-sm-5">View Consol</dt>
                        <dd class="col-sm-7 text-muted">View consolidation</dd>
                        
                        <dt class="col-sm-5">Create Consol</dt>
                        <dd class="col-sm-7 text-muted">Create consolidation</dd>
                        
                        <dt class="col-sm-5">Finalize</dt>
                        <dd class="col-sm-7 text-muted">Finalize billing</dd>
                        
                        <dt class="col-sm-5">View Reports</dt>
                        <dd class="col-sm-7 text-muted">Access reports</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            showToast('@TempData["Success"]', 'success');
        });
    </script>
}
