@model UploadViewModel

<div class="alert alert-info mb-3">
    <i class="bi bi-info-circle me-2"></i>
    <strong>Upload Instructions:</strong>
    <ul class="mb-0 mt-2">
        <li>Prepare a CSV file with columns: <code>work_id</code>, <code>description</code>, <code>notes</code></li>
        <li>Select the target Service Area</li>
        <li>Upload the file to preview the data</li>
        <li>Review matches and edit descriptions if needed</li>
        <li>Click "Import Selected" to create the enhancements</li>
    </ul>
</div>
