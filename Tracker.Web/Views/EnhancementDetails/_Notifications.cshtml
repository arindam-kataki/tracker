@model Tracker.Web.ViewModels.EnhancementDetailsViewModel

@{
    var notifications = Model.Notifications;
}

@Html.AntiForgeryToken()

<div class="row">
    <div class="col-12">
        <div class="d-flex align-items-center mb-3">
            <div class="bg-danger text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                <i class="bi bi-bell-fill"></i>
            </div>
            <div>
                <h5 class="mb-0 text-danger fw-bold">Notification Recipients</h5>
                <small class="text-muted">Select people to receive notifications about this enhancement</small>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 col-md-10">
        <div class="card">
            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                <h6 class="mb-0">
                    <i class="bi bi-people me-1"></i> 
                    Select Recipients
                    <span class="badge bg-primary ms-1" id="selectedCount">@notifications.SelectedRecipientIds.Count</span>
                </h6>
                <input type="text" class="form-control form-control-sm" id="searchResources" 
                       placeholder="Search..." style="width: 200px;" />
            </div>
            <div class="card-body p-0" style="max-height: 400px; overflow-y: auto;">
                @if (notifications.AvailableResources.Any())
                {
                    <div class="list-group list-group-flush" id="resourceList">
                        @foreach (var resource in notifications.AvailableResources.OrderBy(r => r.Name))
                        {
                            var isSelected = notifications.SelectedRecipientIds.Contains(resource.Id);
                            <label class="list-group-item list-group-item-action d-flex align-items-center resource-item" 
                                   data-name="@resource.Name.ToLower()" 
                                   data-email="@(resource.Email?.ToLower() ?? "")">
                                <input type="checkbox" class="form-check-input me-3 recipient-checkbox" 
                                       name="recipientIds" value="@resource.Id" 
                                       @(isSelected ? "checked" : "") />
                                <div class="flex-grow-1">
                                    <div class="fw-medium">@resource.Name</div>
                                    @if (!string.IsNullOrEmpty(resource.Email))
                                    {
                                        <small class="text-muted">@resource.Email</small>
                                    }
                                </div>
                                @if (!string.IsNullOrEmpty(resource.ResourceType))
                                {
                                    <span class="badge bg-secondary">@resource.ResourceType</span>
                                }
                            </label>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center text-muted py-4">
                        <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                        <p class="mb-0">No resources available</p>
                    </div>
                }
            </div>
            <div class="card-footer bg-light">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <button type="button" class="btn btn-sm btn-outline-secondary" id="selectAllBtn">
                            <i class="bi bi-check-all me-1"></i>Select All
                        </button>
                        <button type="button" class="btn btn-sm btn-outline-secondary" id="clearAllBtn">
                            <i class="bi bi-x-lg me-1"></i>Clear All
                        </button>
                    </div>
                    <button type="button" class="btn btn-primary" id="saveRecipientsBtn">
                        <i class="bi bi-save me-1"></i>Save Recipients
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
(function() {
    var enhancementId = '@Model.Id';
    var saveUrl = '@Url.Action("UpdateNotificationRecipients", "Enhancements")';
    var searchInput = document.getElementById('searchResources');
    var selectedCountBadge = document.getElementById('selectedCount');
    var saveBtn = document.getElementById('saveRecipientsBtn');
    var selectAllBtn = document.getElementById('selectAllBtn');
    var clearAllBtn = document.getElementById('clearAllBtn');
    
    // Get anti-forgery token
    var tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
    if (!tokenInput) {
        console.error('Anti-forgery token not found');
    }
    var antiForgeryToken = tokenInput ? tokenInput.value : '';

    // Update selected count
    function updateCount() {
        var count = document.querySelectorAll('.recipient-checkbox:checked').length;
        if (selectedCountBadge) {
            selectedCountBadge.textContent = count;
        }
    }

    // Search filter
    if (searchInput) {
        searchInput.addEventListener('input', function() {
            var query = this.value.toLowerCase();
            document.querySelectorAll('.resource-item').forEach(function(item) {
                var name = item.getAttribute('data-name') || '';
                var email = item.getAttribute('data-email') || '';
                var matches = name.indexOf(query) >= 0 || email.indexOf(query) >= 0;
                item.style.display = matches ? '' : 'none';
            });
        });
    }

    // Checkbox change
    document.querySelectorAll('.recipient-checkbox').forEach(function(cb) {
        cb.addEventListener('change', updateCount);
    });

    // Select all (visible items)
    if (selectAllBtn) {
        selectAllBtn.addEventListener('click', function() {
            document.querySelectorAll('.resource-item').forEach(function(item) {
                if (item.style.display !== 'none') {
                    var checkbox = item.querySelector('.recipient-checkbox');
                    if (checkbox) checkbox.checked = true;
                }
            });
            updateCount();
        });
    }

    // Clear all
    if (clearAllBtn) {
        clearAllBtn.addEventListener('click', function() {
            document.querySelectorAll('.recipient-checkbox').forEach(function(cb) {
                cb.checked = false;
            });
            updateCount();
        });
    }

    // Save recipients
    if (saveBtn) {
        saveBtn.addEventListener('click', function() {
            var selectedIds = [];
            document.querySelectorAll('.recipient-checkbox:checked').forEach(function(cb) {
                selectedIds.push(cb.value);
            });

            saveBtn.disabled = true;
            saveBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span>Saving...';

            console.log('Saving to:', saveUrl);
            console.log('Enhancement ID:', enhancementId);
            console.log('Selected IDs:', selectedIds);

            fetch(saveUrl, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': antiForgeryToken
                },
                body: JSON.stringify({
                    enhancementId: enhancementId,
                    recipientIds: selectedIds
                })
            })
            .then(function(response) {
                console.log('Response status:', response.status);
                if (!response.ok) {
                    return response.text().then(function(text) {
                        console.error('Response body:', text);
                        throw new Error('HTTP ' + response.status + ': ' + text.substring(0, 200));
                    });
                }
                return response.json();
            })
            .then(function(result) {
                console.log('Result:', result);
                if (result.success) {
                    saveBtn.innerHTML = '<i class="bi bi-check-lg me-1"></i>Saved!';
                    saveBtn.classList.remove('btn-primary');
                    saveBtn.classList.add('btn-success');
                    
                    setTimeout(function() {
                        saveBtn.innerHTML = '<i class="bi bi-save me-1"></i>Save Recipients';
                        saveBtn.classList.remove('btn-success');
                        saveBtn.classList.add('btn-primary');
                        saveBtn.disabled = false;
                    }, 2000);
                } else {
                    alert('Error: ' + (result.message || 'Failed to save'));
                    saveBtn.innerHTML = '<i class="bi bi-save me-1"></i>Save Recipients';
                    saveBtn.disabled = false;
                }
            })
            .catch(function(error) {
                console.error('Error saving recipients:', error);
                alert('Error saving recipients: ' + error.message);
                saveBtn.innerHTML = '<i class="bi bi-save me-1"></i>Save Recipients';
                saveBtn.disabled = false;
            });
        });
    }

    // Initial count
    updateCount();
})();
</script>
