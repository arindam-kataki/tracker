@model EnhancementDetailsViewModel

<div class="mb-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h6 class="mb-0"><i class="bi bi-paperclip me-1"></i> Attachments</h6>
        <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#uploadModal">
            <i class="bi bi-upload me-1"></i> Upload File
        </button>
    </div>
    
    <p class="text-muted small">Max file size: 100MB. Allowed types: Documents, images, archives, code files.</p>

    @if (!Model.Attachments.Any())
    {
        <div class="alert alert-light text-center py-4">
            <i class="bi bi-folder2-open display-6 text-muted"></i>
            <p class="mb-0 mt-2 text-muted">No attachments yet. Upload files to get started.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>File</th>
                        <th>Size</th>
                        <th>Uploaded By</th>
                        <th>Date</th>
                        <th style="width: 100px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var attachment in Model.Attachments)
                    {
                        <tr>
                            <td>
                                <i class="bi @GetFileIcon(attachment.ContentType) me-2 text-muted"></i>
                                <a href="@Url.Action("DownloadAttachment", "Enhancements", new { id = attachment.Id })">
                                    @attachment.FileName
                                </a>
                            </td>
                            <td class="text-muted">@attachment.FileSizeFormatted</td>
                            <td>@attachment.UploadedByName</td>
                            <td>@attachment.UploadedAt.ToString("g")</td>
                            <td>
                                <a href="@Url.Action("DownloadAttachment", "Enhancements", new { id = attachment.Id })" 
                                   class="btn btn-sm btn-outline-primary" title="Download">
                                    <i class="bi bi-download"></i>
                                </a>
                                <button type="button" class="btn btn-sm btn-outline-danger delete-attachment-btn" 
                                        data-id="@attachment.Id" data-name="@attachment.FileName" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<!-- Upload Modal -->
<div class="modal fade" id="uploadModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-upload me-2"></i>Upload Attachment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="uploadForm" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" name="enhancementId" value="@Model.Id" />
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Select File</label>
                        <input type="file" name="file" class="form-control" id="fileInput" required />
                        <div class="form-text">Maximum size: 100MB</div>
                    </div>
                    <div id="uploadProgress" style="display: none;">
                        <div class="progress">
                            <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 0%"></div>
                        </div>
                        <small class="text-muted" id="uploadStatus">Uploading...</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" id="uploadBtn">
                        <i class="bi bi-upload me-1"></i> Upload
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteAttachmentModal" tabindex="-1">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Attachment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Delete <strong id="deleteFileName"></strong>?</p>
                <p class="text-muted small">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteAttachmentBtn">Delete</button>
            </div>
        </div>
    </div>
</div>

<script>
(function() {
    var deleteAttachmentId = null;
    
    // Upload form
    document.getElementById('uploadForm').addEventListener('submit', function(e) {
        e.preventDefault();
        
        var fileInput = document.getElementById('fileInput');
        if (!fileInput.files.length) return;
        
        var file = fileInput.files[0];
        if (file.size > 104857600) { // 100MB
            alert('File size exceeds 100MB limit.');
            return;
        }

        var tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
    if (!tokenInput) {
        console.error('Anti-forgery token not found');
        return;
    }
    var antiForgeryToken = tokenInput.value;
        
        var formData = new FormData(this);
        var progressBar = document.querySelector('#uploadProgress .progress-bar');
        var uploadProgress = document.getElementById('uploadProgress');
        var uploadBtn = document.getElementById('uploadBtn');
        var uploadStatus = document.getElementById('uploadStatus');
        
        uploadBtn.disabled = true;
        uploadProgress.style.display = 'block';
        
        var xhr = new XMLHttpRequest();
        xhr.open('POST', '@Url.Action("UploadAttachment", "Enhancements")', true);
        xhr.setRequestHeader('RequestVerificationToken', antiForgeryToken);
        
        xhr.upload.onprogress = function(e) {
            if (e.lengthComputable) {
                var percent = (e.loaded / e.total) * 100;
                progressBar.style.width = percent + '%';
                uploadStatus.textContent = 'Uploading... ' + Math.round(percent) + '%';
            }
        };
        
        xhr.onload = function() {
            uploadBtn.disabled = false;
            if (xhr.status === 200) {
                var result = JSON.parse(xhr.responseText);
                if (result.success) {
                    location.reload();
                } else {
                    alert(result.message || 'Upload failed');
                    uploadProgress.style.display = 'none';
                    progressBar.style.width = '0%';
                }
            } else {
                alert('Upload failed');
                uploadProgress.style.display = 'none';
            }
        };
        
        xhr.onerror = function() {
            uploadBtn.disabled = false;
            alert('Upload error');
            uploadProgress.style.display = 'none';
        };
        
        xhr.send(formData);
    });
    
    // Delete buttons
    document.querySelectorAll('.delete-attachment-btn').forEach(function(btn) {
        btn.addEventListener('click', function() {
            deleteAttachmentId = this.dataset.id;
            document.getElementById('deleteFileName').textContent = this.dataset.name;
            new bootstrap.Modal(document.getElementById('deleteAttachmentModal')).show();
        });
    });
    
    // Confirm delete
    document.getElementById('confirmDeleteAttachmentBtn').addEventListener('click', function() {
        if (!deleteAttachmentId) return;
        
        fetch('@Url.Action("DeleteAttachment", "Enhancements")', {
            method: 'POST',
            headers: { 
                'Content-Type': 'application/json',
                'RequestVerificationToken': antiForgeryToken 
            },
            body: JSON.stringify({ id: deleteAttachmentId })
        })
        .then(function(r) { return r.json(); })
        .then(function(result) {
            if (result.success) {
                location.reload();
            } else {
                alert(result.message || 'Delete failed');
            }
        });
    });
})();
</script>

@functions {
    string GetFileIcon(string contentType)
    {
        if (contentType.StartsWith("image/")) return "bi-file-image";
        if (contentType.Contains("pdf")) return "bi-file-pdf";
        if (contentType.Contains("word") || contentType.Contains("document")) return "bi-file-word";
        if (contentType.Contains("excel") || contentType.Contains("spreadsheet")) return "bi-file-excel";
        if (contentType.Contains("powerpoint") || contentType.Contains("presentation")) return "bi-file-ppt";
        if (contentType.Contains("zip") || contentType.Contains("archive") || contentType.Contains("compressed")) return "bi-file-zip";
        if (contentType.StartsWith("text/")) return "bi-file-text";
        return "bi-file-earmark";
    }
}
